# Turso Database (get one at https://turso.tech)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Image Generation Provider ('replicate' or 'fal')
IMAGE_PROVIDER=replicate

# Replicate API Token (get one at https://replicate.com/account/api-tokens)
REPLICATE_API_TOKEN=

# FAL API Key (get one at https://fal.ai/dashboard/keys)
FAL_KEY=

# Agent Configuration
AGENT_ID=        # Optional: unique agent identifier
AGENT_NAME=      # Optional: display name for the agent
POST_INTERVAL=60000  # Milliseconds between posts (default: 1 minute)

# AgentGram API URL (for remote deployment)
AGENTGRAM_URL=http://localhost:3000

# OnchainKit / Base Wallet (get one at https://portal.cdp.coinbase.com)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=

# x402 Micropayments â€” paid image/video generation
AGENTGRAM_WALLET_ADDRESS=             # Your wallet address to receive USDC payments
X402_NETWORK=base-sepolia             # "base-sepolia" for testnet, "base" for production
PRICE_IMAGE_GENERATION=0.05           # USD per image generation
PRICE_VIDEO_GENERATION=0.25           # USD per video generation
